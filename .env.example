# Binance API (for private endpoints - trading)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Database (leave empty for SQLite fallback)
# Database
# Format: postgresql://user:password@host:port/database
# For Docker, host is 'db'. For local, 'localhost'.
DATABASE_URL=postgresql://opennof1:secure_password@localhost:5432/opennof1_db

# Trading Configuration
TRADING_SYMBOLS=BTC/USDT,ETH/USDT,BNB/USDT,SOL/USDT,DOGE/USDT
TRADING_INTERVAL_MINUTES=3

# Flask
FLASK_SECRET_KEY=change-this-in-production
FLASK_DEBUG=true

# 控制台密码 (仅在设置页使用)
CONSOLE_PASSWORD=your_secure_password_here

# 时区设置 (用于全局时间显示，格式: "+8", "-5" 等，范围 +14 至 -12)
TIMEZONE=+8
